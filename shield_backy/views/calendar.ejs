  <link rel="stylesheet" href="stylesheets/sb-admin-2.css" >
  <link rel="stylesheet" href="stylesheets/main.css" >
</head>
<body>
  <div id="wrapper">
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">SHIELD</a>
        </div>
        <!-- /.navbar-header -->
        <ul class="nav navbar-top-links navbar-left">

          <li>
            <a href="/"><i class="fa fa-dashboard fa-fw"></i> Dashboard</a>
          </li>
          <li>
            <a href="/chat" class="active">| <i class="fa fa-commenting fa-fw"></i> Chat</a>
          </li>
          <li>
            <a href="/tag">| <i class="fa fa-commenting fa-fw"></i> Tag</a>
          </li>
          <li>
            <a href="/calendar">| <i class="fa fa-table fa-fw"></i> Calendar</a>
          </li>
          <li>
            <a href="/ticket">| <i class="fa fa-ticket fa-fw"></i> Support</a>
          </li>

        </ul>
        <ul class="nav navbar-top-links navbar-right">
          <!-- /.dropdown -->
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <i class="fa fa-user fa-fw"></i> <i class="fa fa-caret-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-user">
              <li><a href="/profile"><i class="fa fa-user fa-fw"></i> User Profile</a></li>
              <li class="divider"></li>
              <li><a href="/login" id="signout-btn"><i class="fa fa-sign-out fa-fw"></i> Logout</a></li>
            </ul>
            <!-- /.dropdown-user -->
          </li>
          <!-- /.dropdown -->
        </ul>
        <!-- /.navbar-top-links -->

    </nav>
  </div>


  <div id="calendar-wrap">
	  <div id='calendar'></div>
  </div>

  <div class="modal fade" id="myModal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title"></h5>
        </div>
        <div class="modal-body">
          <!-- 內容 -->
          <form>
            <span id="keyId" hidden></span><br />
            <input type="text" placeholder="Event" id="title" required="true" />
            <br /><br />
            <input type="datetime-local" id="startDate" required="true" />
            -
            <input type="datetime-local" id="endDate" />
            <br /><br />
            <textarea type="text" placeholder="Description" id="description" required="false" rows="6" style="width:90%; resize:vertical; "></textarea>
            <br /><br />
            <input type="checkbox" id="allday" value="false"/> <span class="alldaylabel">All Day</span>
            <br /><br />

            <div id="cal-error-msg" hidden>Please fill in the event name or start date or end date</div>
            <div id="tim-error-msg" hidden>Start date cannot be greater than end date</div>
            <!-- <textarea id="details" placeholder="Details">
            </textarea> -->
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" id="add-cal-btn">Add</button>
          <button type="button" class="btn btn-primary" id="save-cal-btn">Save changes</button>
          <button type="button" class="btn btn-primary" id="del-cal-btn">Delete</button>
          <button type="button" class="btn btn-secondary" id="cls-cal-btn" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>


  <script src='javascripts/moment.min.js'></script>
  <script src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js'></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  <script src='javascripts/fullcalendar.min.js'></script>
  <script src="https://www.gstatic.com/firebasejs/3.9.0/firebase.js"></script>
  <script src="javascripts/firebaseConfig.js"></script>
  <script src="javascripts/cal.js"></script>
  <script src="javascripts/sb-admin-2.js"></script>
</body>
</html>
